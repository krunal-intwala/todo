<% layout( 'layout' ) -%>



<h1 id="page-title"><%= title %></h1>

<div id="list">
  <form action="/create" method="post" accept-charset="utf-8">
    <div class="item-new">
      <input class="input" type="text" name="content" />
    </div>
  </form>
<table>
<% todos.forEach( function ( todo ){ %>
<tr>
  <div class="item">
	<td><%= todo.content %>
    <td><a class="update-link" href="/edit/<%= todo._id %>" title="Update this todo item">Edit</a></td>
    <td><a class="del-btn" href="/destroy/<%= todo._id %>" title="Delete this todo item">Delete</a></td>
  </div>
  </tr>
  
<% }); %>
</table>
</div>
